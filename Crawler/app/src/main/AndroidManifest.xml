<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.crawler">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Crawler"
        tools:targetApi="31">

        <!-- WelcomeScreen Activity -->
        <activity android:name=".WelcomeScreen"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- StartScreen Activity -->
        <activity android:name=".StartScreen"
            android:label="@string/app_name"
            android:exported="false" />

        <!-- GameScreen Activity -->
        <activity android:name=".GameScreen"
            android:label="@string/app_name"
            android:exported="false" />

        <!-- EndScreen Activity -->
        <activity android:name=".EndScreen"
            android:label="@string/app_name"
            android:exported="false" />

        <!-- Room1 Activity -->
        <activity android:name=".Room1"
            android:label="@string/app_name"
            android:exported="false" />

        <!-- Room2 Activity -->
        <activity android:name=".Room2"
            android:label="@string/app_name"
            android:exported="false" />

        <!-- Room3 Activity -->
        <activity android:name=".Room3"
            android:label="@string/app_name"
            android:exported="false" />

    </application>
</manifest>
